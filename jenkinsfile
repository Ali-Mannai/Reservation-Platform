pipeline {
    agent any

    
    stages {
        stage('Build Backend') {
            steps {
                echo 'Building backend Docker image...'
                script {
                    bat 'docker build -t alimannai/monpfa-backend:latest .\\backend'
                }
            }
        }
        
        stage('Build Frontend') {
            steps {
                echo 'Building frontend Docker image...'
                script {
                    bat 'docker build -t alimannai/monpfa-frontend:latest .\\hotelBooking-angular-13'
                }
            }
        }
        



    }
    
    post {
        success {
            echo 'Pipeline executed successfully!'
        }
    }
}
