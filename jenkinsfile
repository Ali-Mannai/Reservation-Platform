pipeline {
    agent any

    environment {
        DOCKER_REGISTRY_CREDENTIALS = 'dckr_pat_JFLXkLUKle3sK9giooPGWKHS2DA'
    }
    
    stages {
        stage('Build and Start with Docker Compose') {
            steps {
                echo 'Building and starting with Docker Compose...'
                script {
                    // Run docker-compose up --build using bat
                    bat 'docker-compose -f docker-compose.yml build'
                }
            }
        }
        
        // Ajoutez d'autres étapes pour les tests et le push des images si nécessaire
        
    }
    
    post {
        success {
            echo 'Pipeline exécuté avec succès!'
        }
        failure {
            echo 'Pipeline a échoué!'
        }
        always {
            echo 'Nettoyage...'
            script {
                bat 'docker-compose down'
            }
        }
    }
}
