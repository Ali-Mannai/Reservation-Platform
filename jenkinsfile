pipeline {
    agent any

    environment {
        DOCKER_REGISTRY_CREDENTIALS = 'dckr_pat_JFLXkLUKle3sK9giooPGWKHS2DA'
    }
    
    stages {
        stage('Build and Start with Docker Compose') {
            steps {
                echo 'Building and starting with Docker Compose...'
                script {
                    // Run docker-compose up --build using bat
                    bat 'docker-compose up --build -d'
                }
            }
        }
        
        // Add other stages for testing and pushing images if needed
        
    }
    
    post {
        success {
            echo 'Pipeline executed successfully!'
        }
        failure {
            echo 'Pipeline failed!'
        }
        always {
            echo 'Cleaning up...'
            script {
                bat 'docker-compose down'
            }
        }
    }
}
