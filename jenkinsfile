pipeline {
    agent any

    
    stages {
        stage('Build Backend') {
            steps {
                echo 'Building backend Docker image...'
                script {
                    bat 'docker build -t alimannai/monpfa-backend:first .\\backend'
                }
            }
        }
        
        stage('Build Frontend') {
            steps {
                echo 'Building frontend Docker image...'
                script {
                    bat 'docker build -t alimannai/monpfa-frontend:first .\\hotelBooking-angular-13'
                }
            }
        }
        
        stage('Test Backend') {
            steps {
                echo 'Testing backend...'
                script {
                    bat 'docker run --rm alimannai/monpfa-backend:first npm test'
                }
            }
        }
        
        stage('Test Frontend') {
            steps {
                echo 'Testing frontend...'
                script {
                    bat 'docker run --rm alimannai/monpfa-frontend:first npm test'
                }
            }
        }
        
        stage('Push Images to Docker Registry') {
            steps {
                echo 'Pushing images to Docker Registry...'
                script {
                    docker.withRegistry('https://hub.docker.com', dckr_pat_JFLXkLUKle3sK9giooPGWKHS2DA) {
                        docker.image(alimannai/monpfa-backend:first).push()
                        docker.image(alimannai/monpfa-frontend:first).push()
                    }
                }
            }
        }


    }
    
    post {
        success {
            echo 'Pipeline executed successfully!'
        }
        always {
            echo 'Cleaning up Minikube...'
            script {
                bat 'minikube stop'
                bat 'minikube delete'
            }
        }
    }
}
